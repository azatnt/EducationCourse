<!DOCTYPE html>
<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    @Styles.Render("~/Content/site")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/themes/base/all.css") rel="stylesheet"/>
</head>
<body>


    <style>
        .footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #343a40;
            height: 50px;
            color: white;
            text-align: center;
        }
    </style>


    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Home", "Index", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="nav navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("Categories", "allCategories", "Home")
                </li>

                <li class="nav-item">
                    <a class="nav-link" @Html.ActionLink("About us", "About", "Home")</a>
                </li>

                <a class="nav-link" @Html.ActionLink("Contact", "Contact", "Home")</a>
                </li>


                @if (Session["Email"] != null)
                {

                    if (Session["Email"].Equals("admin@gmail.com"))
                    {
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink("Admin panel", "AdminPanel", "Home")
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" @Html.ActionLink(Session["Name"].ToString(), "MyCourses", "Home")
                        </li>
                    }

                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Logout", "Logoff")
                    </li>
                    
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Login", "Login")
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" @Html.ActionLink("Register", "Register")
                    </li>
                }

            </ul>
        </div>
    </nav>



    <div class="container body-content" style="width:1200px; ">
        <main role="main">
            @RenderBody()
        </main>


    </div>

    <div style="height: 100px;">

    </div>


    <div class="footer">
        <p style="padding-top: 15px;">2020 Copyright Reserved -  @DateTime.Now.Year
        </p>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="@Url.Content("~/Scripts/jquery-3.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")" type="text/javascript"></script>


    <script type="text/javascript">
        $(function () {
            $("[data-autocomplete-source]").each(function () {
                var target = $(this);
                target.autocomplete({ source: target.attr("data-autocomplete-source") });

            });
        });
    </script>
</body>
</html>
