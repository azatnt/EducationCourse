@model IEnumerable<EducationCourse.Models.Category>

@{
    ViewBag.Title = "allCategories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="" style="border: 1px solid black; height: 500px; margin-top: 30px; background-image: url('https://i0.wp.com/www.transform-elearning.com/wp-content/uploads/2017/11/online-course-blog-header.jpg?w=1080'); ">

</div>

<div style="margin-top: 5%; border: 1px solid dimgrey;">
    <h1 style="font-size:50px; padding-left:40%">Category</h1>
    <p style="padding-left:10%; font-size: 20px;">A classificatory division in any field of knowledge, as a phylum or any of its subdivisions in biology</p>
</div>

<div class="container">


    <div class="row">
        <div style="align-items:center; width: 100%;">


            @using (Html.BeginForm("allCategories", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="navbar-form navbar-right" style="margin-top: 40px; display: flex;">


                    <div class="form-group" style="width: 50%; margin-left: 20%;">
                        <input type="text" placeholder="Please search" id="Name" name="Name" class="form-control" data-autocomplete-source='@Url.Action("AutocompleteSearchCategory", "Home")' />
                    </div>
                    <div style="margin-left: 1%;">
                        <button type="submit" class="btn btn-success">
                            Search
                        </button>
                    </div>
                </div>

            }
        </div>



    </div>



    <div class="container" style="margin-top: 110px; border:1px solid black; ">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card col  text-white bg-dark mb-3" style=" margin-top: 40px; border:1px solid red;">
                        <a href="@Url.Action("CourseByCategory", "Home", new { id=item.CategoryId })">
                            <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top" style="height: 210px; width: 297px;" alt="...">
                        </a>
                        <div class="card-body" style="height: 250px; text-align:center">
                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text" style="font-size: 13px;"> @Html.DisplayFor(modelItem => item.Description)</p>
                           
                            @*<div style="display:flex">
                                <p>Instructor:</p><p class="text-muted" style="margin-left: 1%"> @Html.DisplayFor(modelItem => item.Instructor.Name)</p>
                            </div>*@

                        </div>

                    </div>
                </div>
            }
        </div>


    </div>


</div>