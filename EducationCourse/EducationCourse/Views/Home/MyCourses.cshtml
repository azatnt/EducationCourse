        <div class="display-label"><b>Фамилия</b></div>
        <div class="display-field">
            @Html.DisplayFor(model => model.Surname)
        </div>

        <div class="display-label"><b>Courses</b></div>
        <ul>
            @foreach (Course c in Model.Courses)
