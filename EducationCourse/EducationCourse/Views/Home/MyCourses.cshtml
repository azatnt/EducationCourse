{
    <p>You don't have any courses yet!</p>
}
else
{

    <div style="margin-top: 5%; border: 1px solid dimgrey;">
        <h1 style="font-size:50px; text-align:center;">Welcome back</h1>
        <p style="text-align:center; font-size: 20px;">My courses</p>
    </div>

    @*<fieldset>
