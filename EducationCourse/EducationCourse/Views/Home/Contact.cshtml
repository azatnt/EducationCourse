@{
    ViewBag.Title = "Contact";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    * {
        box-sizing: border-box;
    }

    input[type=text], select, textarea {
        width: 100%;
        padding: 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        margin-top: 6px;
        margin-bottom: 16px;
        resize: vertical;
    }

    input[type=submit] {
        background-color: #212529;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    .contain {
        border-radius: 5px;
        background-color: #212529;
        padding: 20px;
    }
</style>

<h2 style="text-align:center; margin-top: 40px">Contact us</h2>


<div class="container" style="margin-top: 60px;">
    <div class="contain">
        <form action="/action_page.php" style="">
            <label for="fname" style="color:white">First Name</label>
            <input type="text" id="fname" name="firstname" placeholder="Your name..">

            <label style="color:white" for="lname">Last Name</label>
            <input type="text" id="lname" name="lastname" placeholder="Your last name..">

            <label style="color:white" for="country">Country</label>
            <select id="country" name="country">
                <option value="ka">Kazakhstan</option>
                <option value="australia">Australia</option>
                <option value="canada">Canada</option>
                <option value="usa">USA</option>
            </select>

            <label style="color:white" for="subject">Subject</label>
            <textarea id="subject" name="subject" placeholder="Write something.." style="height:200px"></textarea>

            <input type="submit" value="Submit" style="background-color:red">
        </form>
    </div>
    
</div>
