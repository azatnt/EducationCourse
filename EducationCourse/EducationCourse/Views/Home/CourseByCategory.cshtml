@using EducationCourse.Models


@{
    ViewBag.Title = "CourseByCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="" style="border: 1px solid black; height: 500px; margin-top: 30px; background-image: url('https://education-basket.com/wp-content/uploads/2016/12/finance.jpg'); ">

</div>

<div style="margin-top: 5%; border: 1px solid dimgrey;">
    <h1 style="font-size:50px; text-align:center">@Model.Name</h1>
    <p style="text-align:center; font-size: 20px;">@Model.Description</p>
</div>

<div class="container">


    <div class="row">
        <div style="align-items:center; width: 100%;">


            @using (Html.BeginForm("Index", "Home", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="navbar-form navbar-right" style="margin-top: 40px; display: flex;">


                    <div class="form-group" style="width: 50%; margin-left: 20%;">
                        <input type="text" placeholder="Please search" id="Title" name="Title" class="form-control" data-autocomplete-source='@Url.Action("AutocompleteSearch", "Home")' />
                    </div>
                    <div style="margin-left: 1%;">
                        <button type="submit" class="btn btn-success">
                            Search
                        </button>
                    </div>
                </div>

            }
        </div>



    </div>



    <div class="container" style="margin-top: 110px; border:1px solid black; ">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (Course item in Model.Courses)
            {
                <div class="col">
                    <div class="card col  text-white bg-dark mb-3" style=" margin-top: 40px; border:1px solid red;">
                        <a href="@Url.Action("CourseDetail", "Home", new { id=item.CourseId })">
                            <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top" style="height: 210px; width: 297px;" alt="...">
                        </a>
                        <div class="card-body" style="height: 200px; text-align:center">
                            <h5 class="card-title"> @Html.DisplayFor(modelItem => item.Title)</h5>
                            <p class="card-text" style="font-size: 13px;"> @Html.DisplayFor(modelItem => item.Description)</p>
                            <div style="display:flex">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Hours) Hours</h5>
                            </div>
                            

                        </div>

                    </div>
                </div>
            }
        </div>


    </div>


</div>