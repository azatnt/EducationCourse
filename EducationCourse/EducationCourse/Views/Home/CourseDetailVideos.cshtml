@using EducationCourse.Models
@model Course
@{
    ViewBag.Title = "CourseDetailVideos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="margin-top: 5%; border: 1px solid dimgrey; text-align:center">
    <h1 style="font-size:50px;">
        @Model.Title
    </h1>
    <p style="font-size: 20px;">
        @Model.Description
    </p>
</div>


<div class="container" style="margin-top: 110px; border:1px solid black; ">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (LectureFiles lectureFiles in Model.LectureFiles)
        {

            <div class="col">
                <div class="card col  text-white bg-dark mb-3" style=" margin-top: 40px; border:1px solid red;">
                    <iframe width="100%" height="215" src="@lectureFiles.FilePath" frameborder="0" encrypted-media" allowfullscreen>
                    </iframe>

                    <div class="card-body" style="height: 200px; text-align:center">
                        <h5 class="card-title">@lectureFiles.Name</h5>
                        <p class="card-text" style="font-size: 13px;"> @lectureFiles.Description.Substring(0, 70)</p>

                        <div style="display:flex">
                            <p>Duration:</p><p class="text-muted" style="margin-left: 1%">@lectureFiles.Duration minutes</p>
                        </div>
                        <div style="display:flex">
                            <p>Lecturer:</p><p class="text-muted" style="margin-left: 1%">@Model.Instructor.Name</p>

                        </div>
                    </div>
                </div>
            </div>
        }
    </div>


</div>

